{
  "expo": {
    "name": "Secure Scribe",
    "slug": "secure-scribe",
    "version": "1.0.1",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon-jyw.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/app-icon-jyw.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.anonymous.Natively",
      "infoPlist": {
        "ITSAppUsesNonExemptEncryption": false,
        "NSMicrophoneUsageDescription": "Required for audio recording and local transcription."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon-jyw.png",
        "backgroundColor": "#000000"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.Natively"
    },
    "web": {
      "favicon": "./assets/images/final_quest_240x240.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-font",
      "expo-router",
      "expo-web-browser",
      "expo-file-system",
      "react-native-executorch"
    ],
    "scheme": "securescribe",
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "backendUrl": "https://bh3h8uufh9h7q9yyhywusffreh7yfdxg.app.specular.dev",
      "eas": {
        "projectId": "963ae7a0-1c83-4ef2-9388-037b25753bfd"
      }
    }
  }
}
